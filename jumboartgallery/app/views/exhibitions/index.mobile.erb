<div data-role="page" id="exhibitions">
  <div data-role="header" data-theme="b" data-position="fixed">
      <h1>Browse Exhibitions</h1>
      <a href="/" data-icon="home" data-back="true" class="ui-btn-right" data-iconpos="notext">Home</a>
  </div><!-- /header -->
  <div data-role="content">
    <ul data-role="listview">
      <% @exhibitions.each do |exhibition| %>
      <li>
        <%= link_to exhibition.name, exhibition %>
      </li>
      <% end %>
    </ul>
  </div>
  <div data-role="footer" data-theme="b" data-position="fixed">
                <div data-role="navbar">
                        <ul>
                                <li><%= link_to "Art", artworks_path, "data-icon" => "grid"  %></li>
                                <li><%= link_to "Home", {:controller => "home", :action => "index"}, "data-icon" => "home" %></li>
                                <li><%= link_to "Tours", tours_path, "data-icon" => "star" %></li>
                        </ul>
                </div>
  </div>  <!-- /footer -->

</div>


