<div data-role="page" id="tours">
  
  <div data-role="header" data-theme="b" data-position="fixed">
    <h1>Mobile Tours</h1>
    <%= link_to "", {:controller => "home", :action => "index"}, :class => "ui-btn-right", "data-icon" => "home", "data-iconpos" => "notext"  %>
  </div><!-- /header -->
  
  <div data-role="content">
	
	<ul data-role="listview" data-inset="true">
		<% @tours.each do |tour| %>
		<li>
			<a href="<%= url_for(tour) %>" data-ajax="false">
			<h1><%= tour.name %></h1>
			<p><%= tour.desc %></p>
			</a>
		</li>
		<% end %>
	</ul>
		
  </div><!-- /content -->
  
    <div data-role="footer" data-theme="b" data-position="fixed">
  		<div data-role="navbar">
  			<ul>
  				<li><%= link_to "Art", artworks_path, "data-icon" => "grid" %></li>
  				<li><%= link_to "Home", {:controller => "home", :action => "index"}, "data-icon" => "home" %></li>
  				<li><%= link_to "Tours", tours_path, "data-icon" => "star" %></li>
  			</ul>
 		</div>
  </div><!-- /footer -->
  
</div><!-- /page -->

