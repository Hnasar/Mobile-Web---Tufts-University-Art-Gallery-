<div data-role="page" id="artworks_by_cat">
  
  <div data-role="header" data-theme="b" data-position="fixed">
    <h1><%=@current_cat%></h1>
      <a href="#home" data-icon="home" class="ui-btn-right" data-iconpos="notext">Home</a>
  </div><!-- /header -->
  
  <div data-role="content">    
    <ul data-role="listview" data-filter="true" data-position="fixed">
      <% @artworks_by_cat.each do |artwork| %>
        <li><%= link_to artwork.title, artwork %></li>
      <% end %>
    </ul>        
  </div><!-- /content -->  
  
    <div data-role="footer" data-theme="b" data-position="fixed">
  		<div data-role="navbar">
  			<ul>
  				<li><%= link_to "Art", artworks_path, "data-icon" => "grid"  %></li>
  				<li><%= link_to "Home", {:controller => "home", :action => "index"}, "data-icon" => "home" %></li>
  				<li><%= link_to "Tours", tours_path, "data-icon" => "star" %></li>
  			</ul>
 		</div>
  </div><!-- /footer -->  
   
</div><!-- /page -->
